doctype html
html(ng-app='mainApp')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title web-arduino
    link(rel='stylesheet', href='/build/main.css')
    link(rel='apple-touch-icon', href='/assets/favicon.png')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-route.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/js/main.js')

  body
    main(ng-controller='mainController')
      div
        select#boardType
          option(ng-repeat='(key, val) in boardTypes', value='{{key}}') {{val.name}}
        button(ng-click='boardChanged()') change

      div#digital
        h2 Digital

        div.pin.digital.pwm(ng-repeat='pin in digitalPins')
          meta(name='pinNum', content="{{pin}}")
          h4 [{{pin}}]

          span(ng-if='isPWM(pin)')
            button.pwmModeToggleButton PWM
            input.valueText(type='text')
            button.pwmValueSetButton Set

          button.digitalModeToggleButton Mode
          button.queryStateButton Query
          button.digitalValueToggleButton Toggle

      div#analog
        h2 Analog

        div#pin.pin.analog(ng-repeat='pin in analogPins')
          meta(name='pinNum', content="{{pin}}")
          h4 [A{{pin-digitalPins.length}}]
          button.analogModeToggleButton Mode
          button.queryStateButton Query
          button.digitalValueToggleButton Toggle
          br
          textarea.analogData(rows='8')
          br
          input.pollValue(type='text')
          button.setPollButton Poll (ms)
          button.stopPollButton Stop

